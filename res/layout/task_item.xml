<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_task_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_task_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rl_task_item"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/iv_task_item_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_task_item_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_task_item_appmem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_mega_bytes"
            android:textSize="12dp" />
    </LinearLayout>

    <CheckBox
        android:clickable="false"
        android:focusable="false"
        android:id="@+id/cb_task_item_isselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

</RelativeLayout>